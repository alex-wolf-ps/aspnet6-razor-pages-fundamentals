@page "/products/all"
@model WiredBrainCoffeeAdmin.Pages.Products.ViewAllProductsModel
@{
}

<h1>All Products</h1>
<hr />

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Image</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>ShortDescription</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Products)
        {
            <tr>
                <td>@item.Id</td>
                <td><img src="~/images/menu/@item.ImageFileName" /></td>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.Price</td>
                <td>@item.ShortDescription</td>
                <td><a class="btn btn-success" asp-page="EditProduct" asp-route-id="@item.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>"
